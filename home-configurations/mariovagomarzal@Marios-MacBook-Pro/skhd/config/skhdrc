# General hotkeys.
lalt - return : open -na "Alacritty"
lalt - space : open -na "Firefox"

# Yabai hotkeys.

# Displays navigation hotkeys.
lctrl + lalt - right : ./functions/focus-display.sh "next"
lctrl + lalt - left : ./functions/focus-display.sh "prev"

# Spaces navigation hotkeys.
lctrl - 1 : ./functions/focus-space.sh "1"
lctrl - 2 : ./functions/focus-space.sh "2"
lctrl - 3 : ./functions/focus-space.sh "3"
lctrl - 4 : ./functions/focus-space.sh "4"
lctrl - 5 : ./functions/focus-space.sh "5"
lctrl - 6 : ./functions/focus-space.sh "6"
lctrl - 7 : ./functions/focus-space.sh "7"
lctrl - 8 : ./functions/focus-space.sh "8"
lctrl - 9 : ./functions/focus-space.sh "9"

lctrl - right : ./functions/focus-space.sh "next"
lctrl - left : ./functions/focus-space.sh "prev"

lctrl - tab : ./functions/focus-space.sh "recent"

# Spaces arrangement hotkeys.
lctrl + shift - 1 : ./functions/move-space.sh "1"
lctrl + shift - 2 : ./functions/move-space.sh "2"
lctrl + shift - 3 : ./functions/move-space.sh "3"
lctrl + shift - 4 : ./functions/move-space.sh "4"
lctrl + shift - 5 : ./functions/move-space.sh "5"
lctrl + shift - 6 : ./functions/move-space.sh "6"
lctrl + shift - 7 : ./functions/move-space.sh "7"
lctrl + shift - 8 : ./functions/move-space.sh "8"
lctrl + shift - 9 : ./functions/move-space.sh "9"

lctrl + shift - right : ./functions/move-space.sh "next"
lctrl + shift - left : ./functions/move-space.sh "prev"

# Spaces management hotkeys.
lctrl - n : ./functions/manage-space.sh "create" "last"
lctrl + shift - n : ./functions/manage-space.sh "create"
lctrl - backspace : ./functions/manage-space.sh "destroy" "last"
lctrl + shift - backspace : ./functions/manage-space.sh "destroy"

# Windows navigation hotkeys.
lalt - h : ./functions/focus-window.sh "west"
lalt - j : ./functions/focus-window.sh "south"
lalt - k : ./functions/focus-window.sh "north"
lalt - l : ./functions/focus-window.sh "east"

lalt - right : ./functions/focus-window.sh "next"
lalt - left : ./functions/focus-window.sh "prev"

lalt - y : ./functions/focus-window.sh "first"
lalt - u : ./functions/focus-window.sh "last"

lalt - tab : ./functions/focus-window.sh "recent"

# Windows arrangement hotkeys.
lalt + shift - h : ./functions/swap-window.sh "west"
lalt + shift - j : ./functions/swap-window.sh "south"
lalt + shift - k : ./functions/swap-window.sh "north"
lalt + shift - l : ./functions/swap-window.sh "east"

lalt + shift - right : ./functions/swap-window.sh "next"
lalt + shift - left : ./functions/swap-window.sh "prev"

lalt + shift - y : ./functions/swap-window.sh "first"
lalt + shift - u : ./functions/swap-window.sh "last"

lalt + shift - tab : ./functions/swap-window.sh "recent"

lalt + shift - 1 : ./functions/move-window.sh "1"
lalt + shift - 2 : ./functions/move-window.sh "2"
lalt + shift - 3 : ./functions/move-window.sh "3"
lalt + shift - 4 : ./functions/move-window.sh "4"
lalt + shift - 5 : ./functions/move-window.sh "5"
lalt + shift - 6 : ./functions/move-window.sh "6"
lalt + shift - 7 : ./functions/move-window.sh "7"
lalt + shift - 8 : ./functions/move-window.sh "8"
lalt + shift - 9 : ./functions/move-window.sh "9"

lalt + shift - n : ./functions/move-window.sh "next"
lalt + shift - p : ./functions/move-window.sh "prev"

lalt + shift - r : ./functions/move-window.sh "recent"

lalt + shift - 0x1E : ./functions/move-window.sh "new"

lalt - f : ./functions/fullscreen-window.sh "native"

# Windows management hotkeys.
lalt - backspace : ./functions/manage-window.sh "recent"
lalt + shift - backspace : ./functions/manage-window.sh "-focus"

# Windows resizing mode.
:: resize @

lalt - r ; resize
resize < escape ; default

resize < h : ./functions/resize-window.sh "left" "-normal"
resize < j : ./functions/resize-window.sh "bottom" "normal"
resize < k : ./functions/resize-window.sh "top" "-normal"
resize < l : ./functions/resize-window.sh "right" "normal"

resize < shift - h : ./functions/resize-window.sh "left" "normal"
resize < shift - j : ./functions/resize-window.sh "bottom" "-normal"
resize < shift - k : ./functions/resize-window.sh "top" "normal"
resize < shift - l : ./functions/resize-window.sh "right" "-normal"

resize < cmd - h : ./functions/resize-window.sh "left" "-small"
resize < cmd - j : ./functions/resize-window.sh "bottom" "small"
resize < cmd - k : ./functions/resize-window.sh "top" "-small"
resize < cmd - l : ./functions/resize-window.sh "right" "small"

resize < cmd + shift - h : ./functions/resize-window.sh "left" "small"
resize < cmd + shift - j : ./functions/resize-window.sh "bottom" "-small"
resize < cmd + shift - k : ./functions/resize-window.sh "top" "small"
resize < cmd + shift - l : ./functions/resize-window.sh "right" "-small"

resize < 0x1E : ./functions/resize-window.sh "corners" "normal"
resize < 0x2C : ./functions/resize-window.sh "corners" "-normal"

resize < cmd - 0x1E : ./functions/resize-window.sh "corners" "small"
resize < cmd - 0x2C : ./functions/resize-window.sh "corners" "-small"
